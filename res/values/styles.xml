<resources>

    <style name="MainText">
        <item name="android:textColor">@color/text_widget_main_color</item>
        <item name="android:textSize">@dimen/text_main_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText.Medium">
        <item name="android:textSize">@dimen/text_main_size_medium</item>
    </style>

    <style name="MainText.Small">
        <item name="android:textSize">@dimen/text_main_size_small</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/text_widget_main_color</item>
        <item name="android:textSize">@dimen/text_small_size_large</item>
        <item name="android:layout_marginTop">@dimen/text_small_margin_large</item>
    </style>

    <style name="SmallText.Medium">
        <item name="android:textSize">@dimen/text_small_size_medium</item>
        <item name="android:layout_marginTop">@dimen/text_small_margin_medium</item>
    </style>

    <style name="SmallText.Small">
        <item name="android:textSize">@dimen/text_small_size_small</item>
        <item name="android:layout_marginTop">@dimen/text_small_margin_small</item>
    </style>

    <style name="BigTitle">
        <item name="android:textColor">@color/text_big_title</item>
        <item name="android:textSize">@dimen/text_big_title</item>
        <item name="android:shadowColor">@color/text_big_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:layout_marginLeft">@dimen/login_margin</item>
        <item name="android:layout_marginTop">@dimen/login_margin</item>
        <item name="android:layout_marginRight">@dimen/login_margin</item>
        <item name="android:layout_marginBottom">@dimen/spacing_double</item>
        <item name="customFont">Roboto-Light.ttf</item>
    </style>
</resources>