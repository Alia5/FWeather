<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <net.frakbot.FWeather.util.WeatherLocationPreference
            android:key="@string/pref_key_weather_location"
            android:title="@string/pref_title_weather_location"/>

    <net.frakbot.FWeather.uglyworkarounds.ActuallyWorkingSwitchPreference
            android:key="@string/pref_key_analytics"
            android:title="@string/pref_title_analytics"
            android:defaultValue="true"
            android:switchTextOff="@string/off"
            android:switchTextOn="@string/on"/>

    <net.frakbot.FWeather.uglyworkarounds.ActuallyWorkingSwitchPreference
            android:key="@string/pref_key_debug"
            android:title="@string/pref_title_debug"
            android:summary="@string/pref_summary_debug"
            android:defaultValue="false"
            android:switchTextOff="@string/off"
            android:switchTextOn="@string/on"/>

</PreferenceScreen>