<resources>
    <!--
    This file contains the list of every handled weather code.
    Each array name must be written in the format: "weather_temp_#", where "#" is the upper
    temperature bound (an array is selected iif the current temperature <= #)
    Every item in each array refers to the exact name of a weather temperature string, so it can
    be randomly selected.
    -->

    <string-array name="weather_temp_0" translatable="false">
        <item>temp_freezing</item>
    </string-array>
    <string-array name="weather_temp_15" translatable="false">
        <item>temp_cold_01</item>
        <item>temp_cold_02</item>
        <item>temp_cold_03</item>
    </string-array>
    <string-array name="weather_temp_28" translatable="false">
        <item>temp_warm</item>
    </string-array>
    <string-array name="weather_temp_1000" translatable="false">
        <item>temp_hot_01</item>
        <item>temp_hot_02</item>
        <item>temp_hot_03</item>
        <item>temp_hot_04</item>
        <item>temp_hot_05</item>
    </string-array>

    <!-- Error messages -->
    <string-array name="weather_temp_m_1" translatable="false">
        <item>temp_wtf</item>
    </string-array>
    <string-array name="weather_temp_m_10000" translatable="false">
        <item>temp_no_location</item>
    </string-array>
    <string-array name="weather_temp_m_10001" translatable="false">
        <item>temp_no_network</item>
    </string-array>
    <string-array name="weather_temp_m_10002" translatable="false">
        <item>temp_wtf</item>
    </string-array>
</resources>
